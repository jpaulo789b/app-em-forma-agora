<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="joaopaulo.com.br.emformaagora.MainActivity">

    <RelativeLayout
        android:id="@+id/peso"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="7dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_coners"
        android:backgroundTint="#cfcece"

        >

        <ImageView
            android:id="@+id/imgPeso"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/weight" />

        <TextView
            android:id="@+id/textviewWporcentagem"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingRight="5dp"
            android:text="30%"
            android:textColor="#000"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/textViewWTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textViewWVocePode"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:text="levantamento de peso"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewWVocePode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:text="Você consegue!"
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textViewWSessoes"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/rounded_coners"
            android:backgroundTint="#a1000009"
            android:padding="5dp"
            android:text="10 sessões"
            android:textColor="#FFF"
            android:textSize="17dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/yoga"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/rounded_coners"
        android:backgroundTint="#cfcece">

        <ImageView
            android:id="@+id/imgLotus"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/lotus" />

        <TextView
            android:id="@+id/textViewLporcentagem"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingRight="5dp"
            android:text="15%"
            android:textColor="#000"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/textViewLTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textViewLVocePode"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:text="Yoga"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewLVocePode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:text="Namaste"
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textViewLsessoes"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/rounded_coners"
            android:backgroundTint="#a1000009"
            android:padding="5dp"
            android:text="1 hora"
            android:textColor="#FFF"
            android:textSize="17dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cardio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_coners"
        android:backgroundTint="#cfcece"
        >

        <ImageView
            android:id="@+id/imgCoracao"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/heart" />

        <TextView
            android:id="@+id/textViewCPorcentagem"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingRight="5dp"
            android:text="37%"
            android:textColor="#000"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/textViewCTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textViewCVocePode"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:text="Cardio"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewCVocePode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:text="Corra feito um louco"
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textViewCSessoes"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/rounded_coners"
            android:backgroundTint="#a1000009"
            android:padding="5dp"
            android:text="10 Km"
            android:textColor="#FFF"
            android:textSize="17dp" />
    </RelativeLayout>

</LinearLayout>
